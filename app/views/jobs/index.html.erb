<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Order
    <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("By Lower Bound", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("By Upper Bound", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("By Date", jobs_path ) %>

        </li>
    </ul>
</div>

<br/> <br/>


<table class="table table-boldered">
    <thead>
        <tr>
            <td>Jobs</td>
            <td>Wage_Lower_Bound</td>
            <td>Wage_Upper_Bound</td>
            <td>Published Date</td>
        </tr>

    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
                <%= job.wage_lower_bound %>
            </td>
            <td>
                <%= job.wage_upper_bound %>
            </td>
            <td>
                <%= job.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>

</table>
